    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/news_list_fragment"
        android:name="com.ongoni.csit.ssunews.NewsListFragment"
        android:layout_width="256dp"
        android:layout_height="match_parent"/>

    <fragment
